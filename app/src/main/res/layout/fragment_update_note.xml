<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateNoteFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="id"
        android:gravity="center_horizontal"
        android:layout_margin="50dp"
        android:id="@+id/selectednotedupateid"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Note"
        android:layout_below="@id/selectednotedupateid"
        android:gravity="center_horizontal"
        android:layout_margin="50dp"
        android:id="@+id/selectednotedupatecontent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submitupdate"
        android:layout_below="@id/selectednotedupatecontent"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>